{
  "name": "ops-weekly-defect-reporting",
  "version": "0.1.0",
  "private": true,
  "description": "Weekly defect summary reporting service for operations analytics.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:api": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:ui": "vite --config frontend/vite.config.ts",
    "build": "tsc -p tsconfig.json",
    "build:ui": "vite build --config frontend/vite.config.ts",
    "preview:ui": "vite preview --config frontend/vite.config.ts",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --check"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --check"
    ]
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^10.0.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.3.0",
    "pg-mem": "^3.0.5",
    "prettier": "^3.8.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vite": "^7.3.1"
  }
}
