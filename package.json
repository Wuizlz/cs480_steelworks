  "private": true,
  "description": "Weekly defect summary reporting service for operations analytics.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:api": "ts-node-dev --respawn --transpile-only src/index.ts",
