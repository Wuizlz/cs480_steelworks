  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^2.0.16",
    "@vitejs/plugin-react": "^4.3.1",
    "jest": "^25.0.0",
    "pg-mem": "^3.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vite": "^7.3.1"
